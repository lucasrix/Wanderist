        %tr
          %td
            %table(border="0" cellpadding="0" cellspacing="0" width="100%")
              %tr
                %td(height="175" bgcolor="#364b61" style="text-align: center; padding: 51px 20px 30px;")
                  %img(src="email_maplify_logo.png" width="276" height="94" alt="Maplify - Your life on a map")
        %tr
          %td(bgcolor="#fff" style="padding: 45px 55px 15px;")
            %table(border="0" cellpadding="0" cellspacing="0" width="100%")
