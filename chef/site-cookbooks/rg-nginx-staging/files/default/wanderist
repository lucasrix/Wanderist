server {
  listen 80;

  client_max_body_size 100m;

  server_name 10.10.10.175;
  root /home/deployer/sites/wanderist/current/public;

  error_page 503 /503.html;

  location / {
    if (-f /home/deployer/sites/wanderist/shared/public/system/maintance.txt) {
      return 503;
    }

    gzip_static on;
    try_files $uri @puma;
  }

  location = /503.html {
    internal;
  }

  location ~*  \.(jpg|jpeg|png|gif|ico|css|js)$ {
    expires 365d;
    try_files $uri @puma;
  }

  location @puma {
    proxy_set_header Client-Ip $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Host $host;
    proxy_pass http://unix:/home/deployer/sites/wanderist/shared/tmp/sockets/puma.sock;
  }


}
