upstream puma {
  server unix:///home/deployer/www/maplify-api/shared/tmp/sockets/puma.sock fail_timeout=0;
}

server {
  listen 80;
  listen 443 ssl;

  server_name api.maplifyapp.com 45.55.151.175 ;

  ssl_certificate /etc/nginx/ssl/api.maplifyapp.com/ssl-bundle.crt;
  ssl_certificate_key /etc/nginx/ssl/api.maplifyapp.com/api-maplifyapp-private.key;
  ssl_dhparam /etc/nginx/ssl/api.maplifyapp.com/dhparam.pem;

  ssl_session_timeout 24h;
  ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
  ssl_ciphers kEECDH+AES128:kEECDH:kEDH:-3DES:kRSA+AES128:kEDH+3DES:DES-CBC3-SHA:!RC4:!aNULL:!eNULL:!MD5:!EXPORT:!LOW:!SEED:!CAMELLIA:!IDEA:!PSK:!SRP:!SSLv2;
  ssl_prefer_server_ciphers on;
  ssl_session_cache shared:SSL:20m;

  add_header Strict-Transport-Security 'max-age=31536000' always;

  root /home/deployer/www/maplify-api/current/public;

  client_max_body_size 100m;

  error_page 503 /503.html;

  location / {
    proxy_pass http://puma;
    proxy_set_header Host $host;
    proxy_set_header Client-Ip $remote_addr;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  }

  location = /503.html {
    internal;
  }
}
